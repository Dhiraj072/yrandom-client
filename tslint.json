{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "whitespace": [
            false,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-module"
        ]
    },
    "defaultSeverity": "warning",
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "src/serviceWorker.ts"
        ]
    }
}